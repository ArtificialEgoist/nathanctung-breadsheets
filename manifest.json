{
  "manifest_version": 2,
  "name": "Breadsheets",
  "version": "1.0",
  "description": "",
  "author": "Nathan Tung",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "background": {
    "persistent": false,
    "scripts": ["dist/background.js"]
  },
  "browser_action": {
    "default_icon": "img/icon16.png",
    "default_popup": "dist/popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "<all_urls>"
  ]
}